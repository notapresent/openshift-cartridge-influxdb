[meta]
  dir = "<%= ENV['OPENSHIFT_DATA_DIR'] %>influxdb/var/meta"

[data]
  dir = "<%= ENV['OPENSHIFT_DATA_DIR'] %>influxdb/var/data"
  wal-dir = "<%= ENV['OPENSHIFT_DATA_DIR'] %>influxdb/var/wal"

  cache-max-memory-size = 268435456
  cache-snapshot-memory-size = 6553600

[coordinator]
  log-queries-after = "5s"

[admin]
  enabled = true
  bind-address = "<%= ENV['OPENSHIFT_INFLUXDB_IP'] %>:8083"


[http]
  enabled = true
  bind-address = "<%= ENV['OPENSHIFT_INFLUXDB_IP'] %>:<%= ENV['OPENSHIFT_INFLUXDB_PORT'] %>"
